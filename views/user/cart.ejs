<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="shortcut icon" href="/user/favi.png" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display&display=swap" rel="stylesheet">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,1,0" />
    <style>
        body {
            background-color: #f0f0f0;
        }

        ul {
            list-style-type: none;
        }
    </style>
</head>

<body>
    <!-- Including Navbar -->
    <%- include('navbar') %>

        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">

                </div>
                <hr>

                <div class="col-lg-12">
                    <h2>My Carts</h2>
                    <div class="row mt-2 p-2" >

                        <div class="col-lg-12" style="border: 1px solid #ccc;">
                            <div class="row">

                                <div class="col-lg-6 col-md-6 col-sm-6 col-6 p-3"
                                    style="flex-direction: column; background-color: rgba(125, 199, 41, 0.712);  color: white; font-weight: 600; font-size: 1.4rem;"><span>
                                        Name
                                    </span></div>
                                <div class="col-lg-6 col-md-6 col-sm-6 col-6 p-3"
                                    style="flex-direction: column; background-color: rgba(125, 199, 41, 0.712); font-size: 1.4rem; font-weight: 600; color: white; border-left: 3px solid #ccc;"><span>
                                        Price
                                    </span></div>
                                <% cartItems.forEach(cart=> { %>

                                    <div class="col-lg-6 col-md-6 col-sm-6 col-6 p-2" style="flex-direction: column; background-color: #e6dddd; border: 10px solid #f0f0f0;  font-weight: 600;"><span>
                                            <%= cart.prdName %>
                                        </span></div>
                                    <div class="col-lg-6 col-md-6 col-6 p-2" style="flex-direction: column; background-color:#e6dddd; border: 10px solid #f0f0f0;  font-weight: 600;"><span>
                                            â‚¹<%= cart.prdPrice %>/-</span></div>

                                    <% }); %>
                                    <div class="col-lg-6 col-md-6 col-6 p-2" style="flex-direction: column; background-color:#e6dddd; border: 10px solid #f0f0f0;  font-weight: 600;"><span>
                                        Total</span></div>

                            </div>
                        </div>

                    </div>
                </div>

            </div>

        </div>


        <!-- footer -->





        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous">
            </script>
</body>

</html>